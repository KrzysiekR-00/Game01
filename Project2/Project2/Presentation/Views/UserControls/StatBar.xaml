<ProgressBar 
    x:Class="Project2.Presentation.Views.UserControls.StatBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:Project2.Presentation.Views.UserControls"
    mc:Ignorable="d" 
    d:DesignHeight="450" 
    d:DesignWidth="800"
    Background="Transparent" 
    Foreground="White" 
    BorderBrush="White" 
    BorderThickness="1"
    >
    <ProgressBar.ToolTip>
        <ToolTip Background="#99000000">
            <TextBlock x:Name="tooltip" Style="{StaticResource TextNormal}" Margin="5" Text=""/>
        </ToolTip>
    </ProgressBar.ToolTip>
</ProgressBar>

